{
  "info": {
    "name": "BE-DoAn API Collection",
    "description": "API collection for recruitment system backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Users - Get All (Auth Required)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/users",
          "host": ["{{base_url}}"],
          "path": ["api", "users"]
        }
      }
    },
    {
      "name": "Companies - Get All",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/companies",
          "host": ["{{base_url}}"],
          "path": ["api", "companies"]
        }
      }
    },
    {
      "name": "Jobs - Get All",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/jobs",
          "host": ["{{base_url}}"],
          "path": ["api", "jobs"]
        }
      }
    },
    {
      "name": "Search - Jobs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/search/jobs?q=developer",
          "host": ["{{base_url}}"],
          "path": ["api", "search", "jobs"],
          "query": [
            {
              "key": "q",
              "value": "developer"
            }
          ]
        }
      }
    },
    {
      "name": "Applications - Get All (Auth Required)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/applications",
          "host": ["{{base_url}}"],
          "path": ["api", "applications"]
        }
      }
    },
    {
      "name": "Application Management - Get Applications (Auth Required)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/application-management/applications",
          "host": ["{{base_url}}"],
          "path": ["api", "application-management", "applications"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000"
    },
    {
      "key": "auth_token",
      "value": ""
    }
  ]
}
